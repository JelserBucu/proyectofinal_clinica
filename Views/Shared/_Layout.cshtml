            }

            /* Hide table headers (but not display: none;, for accessibility) */
            #tblSolicitud thead tr {
                position: absolute;
                top: -9999px;
                left: -9999px;
            }

            #tblSolicitud tr {
            margin: 0 0 1rem 0;
            }

            #tblSolicitud tr:nth-child(odd) {
            background: #ccc;
            }

            #tblSolicitud td {
                /* Behave  like a "row" */
                border: none;
                border-bottom: 1px solid #eee;
                right: 100px;
            }

            #tblSolicitud td:before {
                /* Top/left values mimic padding */
                top: 5px;
                left: 10px;
                padding-right: 25px;
                white-space: normal;
            }

                /*
                Label the data
            You could also use a data-* attribute and content for this. That way "bloats" the HTML, this way means you need to keep HTML and CSS in sync. Lea Verou has a clever way to handle with text-shadow.
                */
                #tblSolicitud td:nth-of-type(1):before { content: "TIPO DE SOLICITUD"; font-weight: bold; }
                #tblSolicitud td:nth-of-type(2):before { content: "FECHA"; font-weight: bold; }
                #tblSolicitud td:nth-of-type(3):before { content: "ESTADO"; font-weight: bold; }
